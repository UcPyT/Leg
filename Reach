
local playerName = "ssk_yy3mk"
local player = workspace:FindFirstChild(playerName)
local head = player and player:FindFirstChild("Head")
local torso = player and player:FindFirstChild("Torso")
local leftArm = player and player:FindFirstChild("LeftArm")
local rightArm = player and player:FindFirstChild("RightArm")

if head then
    head.CanCollide = false
    head.CanQuery = false
    head.CanTouch = true
    head.Shape = Enum.PartType.Wedge
    head.CustomPhysicalProperties = PhysicalProperties.new(1, 0.3, 0.5)
end

if torso then
    torso.CanCollide = false
    torso.CanQuery = false
    torso.CanTouch = true
    torso.CustomPhysicalProperties = PhysicalProperties.new(1, 0.3, 0.5)
end

if leftArm then
    leftArm.CanCollide = false
    leftArm.CanQuery = false
    leftArm.CanTouch = true
    leftArm.CustomPhysicalProperties = PhysicalProperties.new(1, 0.3, 0.5)
end

if rightArm then
    rightArm.CanCollide = false
    rightArm.CanQuery = false
    rightArm.CanTouch = true
    rightArm.CustomPhysicalProperties = PhysicalProperties.new(1, 0.3, 0.5)
end


local ball = workspace:FindFirstChild("TPSSystem") and workspace.TPSSystem:FindFirstChild("TPS")
if ball then
    ball.CanCollide = false
    ball.CanQuery = false
    ball.CanTouch = true
end


local RunStepped2 = game:GetService("RunService").RenderStepped:Connect(function()
    if game.Players.LocalPlayer.Character.Humanoid.RigType == Enum.HumanoidRigType.R6 then
        if (game.Players.LocalPlayer.Character.HumanoidRootPart.Position - workspace.TPSSystem.TPS.Position).Magnitude <= 3.4 then
            if game.Lighting[game.Players.LocalPlayer.Name].PreferredFoot.Value == 1 then
                firetouchinterest(game.Players.LocalPlayer.Character["Right Leg"], workspace.TPSSystem.TPS, 0)
                firetouchinterest(game.Players.LocalPlayer.Character["Right Leg"], workspace.TPSSystem.TPS, 1)
            elseif game.Lighting[game.Players.LocalPlayer.Name].PreferredFoot.Value == 2 then
                firetouchinterest(game.Players.LocalPlayer.Character["Left Leg"], workspace.TPSSystem.TPS, 0)
                firetouchinterest(game.Players.LocalPlayer.Character["Left Leg"], workspace.TPSSystem.TPS, 1)
            end
        end
    end

    if game.Players.LocalPlayer.Character.Humanoid.RigType == Enum.HumanoidRigType.R15 then
        if (game.Players.LocalPlayer.Character.HumanoidRootPart.Position - workspace.TPSSystem.TPS.Position).Magnitude <= 3 then
            if game.Lighting[game.Players.LocalPlayer.Name].PreferredFoot.Value == 1 then
                firetouchinterest(game.Players.LocalPlayer.Character["RightLowerLeg"], workspace.TPSSystem.TPS, 0)
                firetouchinterest(game.Players.LocalPlayer.Character["RightLowerLeg"], workspace.TPSSystem.TPS, 1)
            elseif game.Lighting[game.Players.LocalPlayer.Name].PreferredFoot.Value == 2 then
                firetouchinterest(game.Players.LocalPlayer.Character["LeftLowerLeg"], workspace.TPSSystem.TPS, 0)
                firetouchinterest(game.Players.LocalPlayer.Character["LeftLowerLeg"], workspace.TPSSystem.TPS, 1)
            end
        end
    end
end)
